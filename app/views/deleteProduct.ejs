<a href="/categories/<%= category.id %>/products">Back to category</a>
<h1><%= title %></h1>
<form action="/categories/<%= category.id %>/products/<%= product.id %>/delete" method="POST" id="delete-product-form">
    <p>Enter password to delete "<%= product.title %>" from the "<%= category.title %>" category</p>
    
    <label for="password">Password</label>
    <input type="password" name="password" id="password" required>
    <% if (locals.errors) { %>
        <%- include("./partials/fieldErrors", { errors: errors, selector: "password" }) %>
    <% } %>
</form>
<a href="/categories/<%= category.id %>/products">Cancel</a>
<button type="submit" form="delete-product-form">Delete</button>