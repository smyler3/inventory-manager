<html>
    <head>
        <title>All Categories</title>
    </head>
    <body>
        <h1>All Categories</h1>
        <form>
            <input type="text" id="search" placeholder="Search by category name" />
        </form>
        <div class="horizontalContainer">
            <!-- include("./partials/sortByButton", { options: options }) -->
            <a href="/categories/new">Create new category</a>
        </div>
        <p><%= categories.length %> categories</p>
        <ul>
            <% categories.forEach(category => {%>
                <li><%- include("./partials/categoryCard", { category: category }) %></li>
            <% }); %>
        </ul>
    </body>
</html>