
<h1><%= title %></h1>

<a href="/categories/new" class="create-button">Create new category</a>

<%- include("./partials/filters", { action, search, sort, options }) %>
<p class="results-counter"><%= categories.length %> categories</p>

<% if (categories.length > 0) { %>
    <ul class="category-card-grid">
        <% categories.forEach(category => {%>
            <li><%- include("./partials/categoryCard", { category }) %></li>
        <% }); %>
    </ul>
<% } else { %>
    <p>No results for "<%= search %>" found</p>
<% } %>

<style>
    .create-button {
        align-self: start;
        padding: 8px 16px;

        background-color: rgb(189, 219, 231);
        border: 2px solid skyblue;
        border-radius: 4px;
    }

    .results-counter {
        margin-bottom: -30px;
    }

    .category-card-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
</style>